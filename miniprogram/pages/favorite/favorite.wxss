/* miniprogram/pages/favorite/favorite.wxss */
.video-card {
  text-align: center;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  margin: 5rpx 27rpx 0;
  background: #FFFFFF;
  box-shadow: 0 2rpx 13rpx 5rpx rgba(0, 0, 0, 0.02);
  border-radius: 13rpx;
}
.favorite{
    width: 40rpx;
    height: 40rpx;

}
.split {
  height: 8rpx;
  background: #F9F9F9;
}
.video{
  width:100%;
  height: 390rpx;
}
.video-title{
  padding: 10rpx 20rpx;
  opacity: 0.9;
  font-weight:bold;
  text-align: center;
  font-size: 1.5
  
}
.intro{
  font-size: 90%;
  opacity: 0.9;
  line-height: 1.5;
  padding: 30rpx 20rpx;
  text-align: left;
}
.name{
  opacity: 0.9;
  text-align: left;
}
.time{
  opacity: 0.7;
  font-size: 80%;
  text-align: right;
}

.user-split {
  height: 8rpx;
  background: #F9F9F9;
}

.user-options .option {
  display: flex;
  align-items: center;
  margin-left: 46rpx;
  margin-right: 27rpx;
  height: 128rpx;
  border-bottom: 1px solid rgba(151, 151, 151, 0.2);
}

.user-options .option:last-child {
  border-bottom: none;
}
.options{
  padding: 20rpx;
}